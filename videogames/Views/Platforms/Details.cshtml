@model VideoGames.Models.Platform


@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Platform</h4>
    <hr />
    <dl class="dl-horizontal">
        
            <dt>
                @Html.DisplayNameFor(model => model.ParentCompany.CompanyName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ParentCompany.CompanyName)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.PlatformName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PlatformName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Hardware.HardwareType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Hardware.HardwareType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
        
</dl>
    <div id="accordion">
        <h3>Games released on the @Html.DisplayFor(model => model.PlatformName)</h3>
        <div>
            <table class="table">
                <tr>
                    <th>Title</th>

                    <th>Date</th>
                </tr>

                @foreach (var platform in Model.PlatformGames)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => platform.Game.GameTitle)</td>
                        <td>@Html.DisplayFor(modelItem => platform.ReleaseDate)</td>
                    </tr>
                }

            </table>
        </div>
        <h3>Developers on the @Html.DisplayFor(model => model.PlatformName)</h3>
        <div>
            <table class="table">
                <tr>
                    <th>Developer</th>
                </tr>

                @foreach (var dev in Model.Developers)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => dev.DeveloperName)</td>
                    </tr>
                }

            </table>
        </div>
    </div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PlatformID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
