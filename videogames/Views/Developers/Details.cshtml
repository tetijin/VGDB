@model VideoGames.Models.Developer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Developer</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.DeveloperName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeveloperName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateEstablished)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateEstablished)
        </dd>
    </dl>
    <div id="accordion">
        <h3>Games @Html.DisplayFor(model => model.DeveloperName) has developed</h3>
        <div>
            <table class="table">
                <tr>
                    <th>Games</th>
                </tr>
                @foreach (var game in Model.Games)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => game.GameTitle)</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.DeveloperID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
