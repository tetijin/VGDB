@model IEnumerable<VideoGames.Models.PlatformGame>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success btn-sm", @style = "color:white" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Game.GameTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Platform.PlatformName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Game.GameTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Platform.PlatformName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { gameID = item.PlatformID, platformID = item.GameID }, new { @class = "btn btn-success", @style = "color:white" }) 
            @Html.ActionLink("Details", "Details", new { gameID = item.PlatformID, platformID = item.GameID }, new { @class = "btn btn-default", @style = "color:white" }) 
            @Html.ActionLink("Delete", "Delete", new { gameID = item.PlatformID, platformID = item.GameID }, new { @class = "btn btn-danger", @style = "color:white" })
        </td>
    </tr>
}

</table>
